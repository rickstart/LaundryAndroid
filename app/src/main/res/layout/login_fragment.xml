<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="viewmodel"
                type="com.ricardocenteno.laundry.viewmodel.LoginViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.LoginFragment">
        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideV80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.8"/>
        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideV20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.20"/>
        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideH15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.15"/>
        <TextView
                android:id="@+id/txtLoginTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:layout_marginStart="@dimen/normal_200"
                app:layout_constraintBottom_toTopOf="@+id/guideH15"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/font_title" />
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLytEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guideH15"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/normal_200"
                android:layout_marginEnd="@dimen/normal_200"
                android:layout_marginTop="@dimen/normal_100"
                android:hint="@string/email"
                app:errorEnabled="true"
                app:error="@{viewmodel.emailError != null ? context.getString(viewmodel.emailError)  : ``}">
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:text="@={viewmodel.email}" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLytPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputLytEmail"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/normal_200"
                android:layout_marginEnd="@dimen/normal_200"
                android:layout_marginTop="@dimen/normal_100"
                android:hint="@string/password"
                app:errorEnabled="true"
                app:error="@{viewmodel.passwordError != null ? context.getString(viewmodel.passwordError) : ``}">
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:text="@={viewmodel.password}"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_300"
                style="@style/Widget.AppCompat.Button.Colored"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="@dimen/font_btn_title"
                app:layout_constraintStart_toEndOf="@+id/guideV20"
                app:layout_constraintEnd_toStartOf="@+id/guideV80"
                app:layout_constraintTop_toBottomOf="@id/inputLytPassword"
                android:onClick="@{() -> viewmodel.onClickLogin()}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
